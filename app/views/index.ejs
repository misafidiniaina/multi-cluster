<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Website Views</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="toggle-container">
      <label class="switch">
        <input type="checkbox" id="darkModeToggle" />
        <span class="slider round"></span>
      </label>
      <span id="modeLabel">‚òÄÔ∏è</span>
    </div>

    <div class="container">
      <h1>Page View Counter</h1>
      <p>This website has been viewed</p>
      <div class="count"><%= count %></div>
      <p>times</p>
    </div>

    <script>
      const toggle = document.getElementById("darkModeToggle");
      const body = document.body;
      const modeLabel = document.getElementById("modeLabel");

      // Load saved mode
      if (localStorage.getItem("dark-mode") === "true") {
        body.classList.add("dark");
        toggle.checked = true;
        modeLabel.textContent = "üåô";
      }

      toggle.addEventListener("change", () => {
        if (toggle.checked) {
          body.classList.add("dark");
          localStorage.setItem("dark-mode", "true");
          modeLabel.textContent = "üåô";
        } else {
          body.classList.remove("dark");
          localStorage.setItem("dark-mode", "false");
          modeLabel.textContent = "‚òÄÔ∏è";
        }
      });

      // Year logic
      document.getElementById("year").textContent = new Date().getFullYear();
    </script>
    <footer class="footer">
      <p>
        &copy; <span id="year"></span> Liantsoa Tsiory. All rights reserved.
      </p>
    </footer>
  </body>
</html>
